{
    "compilerOptions": {
        "target": "ES6", // Compile to ES5 for broader browser support
        "module": "commonjs", // Use CommonJS module system (for Node.js)
        "strict": true, // Enable strict type-checking options
        "esModuleInterop": true, // Allow default imports from modules without default exports
        "skipLibCheck": true, // Skip type checking of declaration files
        "outDir": "./dist", // Output directory for compiled JavaScript files
        "rootDir": "./src", // Root directory for TypeScript source files
        "resolveJsonModule": true, // Allow importing JSON files as modules
        "moduleResolution": "node", // Use Node.js module resolution strategy
        "allowJs": true, // Allow mixing JS and TS files (useful if migrating)
        "noEmitOnError": true // Prevent output if there are type errors
    },
    "include": [
        "src/**/*"
    ], // Include all TypeScript files in 'src' directory
    "exclude": [
        "node_modules"
    ] // Exclude node_modules directory
}